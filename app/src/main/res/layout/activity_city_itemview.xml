<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".city_itemview">

    <TextView
        android:id="@+id/txtview_city_name"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:text="cxity_name"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/txtview_city_id"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:text="city_id"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtview_city_name"
        app:layout_constraintEnd_toStartOf="@+id/txtview_city_name"
        app:layout_constraintTop_toTopOf="@+id/txtview_city_name"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>